<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Sidebar Layout</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <link rel="stylesheet" href="/css/admin.css">
</head>
<body>

<!-- Header Strip (Fixed at the top, after the sidebar) -->
<div class="header-strip">
    <!-- User Logo (White color circle) -->
    <div class="logo">
        <i class="fas fa-user"></i> <!-- User icon -->
    </div>

    GOURMET FOODS ADMIN PANEL
</div>

<div class="admin-sidebar">
    <!-- Profile Section -->
    <div class="sidebar-profile">
        <h5 class="fw-bold">Areej Fatima</h5>
        <p class="text-light">Admin</p>
    </div>

    <!-- Sidebar Menu -->
    <div class="sidebar-menu">
        <!-- Main Section -->
        <p class="text-uppercase small">Main</p>
        <a href="/admin/dashboard" class="sidebar-nav-item active">
            <i class="fas fa-home me-3"></i> Dashboard
        </a>

        <!-- Product Management -->
        <p class="text-uppercase small mt-4">Product Management</p>

        <div class="accordion" id="productAccordion">
            <div class="accordion-item">
                <h2 class="accordion-header">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#productsDropdown" aria-expanded="false">
                        <i class="fas fa-box me-3"></i> Products
                    </button>
                </h2>
                <div id="productsDropdown" class="accordion-collapse collapse" data-bs-parent="#productAccordion">
                    <div class="accordion-body">
                        <a href="/admin/products/create" class="sidebar-dropdown-item">Add Product</a>
                        <a href="/admin/products" class="sidebar-dropdown-item">View Products</a>
                    </div>
                </div>
            </div>

            <div class="accordion-item">
                <h2 class="accordion-header">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#categoriesDropdown" aria-expanded="false">
                        <i class="fas fa-tags me-3"></i> Categories
                    </button>
                </h2>
                <div id="categoriesDropdown" class="accordion-collapse collapse" data-bs-parent="#productAccordion">
                    <div class="accordion-body">
                        <a href="/admin/products/createCategory" class="sidebar-dropdown-item">Add Category</a>
                        <a href="/admin/viewcatagories" class="sidebar-dropdown-item">View Categories</a>
                    </div>
                </div>
            </div>
            <div class="accordion-item">
                <h2 class="accordion-header">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#ordersDropdown" aria-expanded="false">
                        <i class="fas fa-box me-3"></i> Orders
                    </button>
                </h2>
                <div id="ordersDropdown" class="accordion-collapse collapse" data-bs-parent="#ordersAccordion">
                    <div class="accordion-body">
                        <a href="/admin/orders" class="sidebar-dropdown-item">View Orders</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <div class="p-3 border-top">
        <button   class="btn btn-danger w-100 rounded-pill">
            <i class="fas fa-sign-out-alt me-2"></i> <a href="/">Logout</a>
        </button>
    </div>
</div>

<div class="main-content">
    <%-body  %>
</div>

<!-- Optional JavaScript -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

